<h1>Input People Data</h1>
<%= form_with url: people_path, method: :post do %>
  <div>
    <%= label_tag :people_input, "Enter number of people and their details:" %>
    <br>
    <%= text_area_tag :people_input, nil, rows: 10, cols: 50 %>
  </div>
  <div>
    <%= submit_tag "Submit" %>
  </div>
<% end %>